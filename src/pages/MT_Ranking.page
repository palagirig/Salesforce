<apex:page standardController="MT_TvTarget__c" extensions="MT_BusinessPlanningController,MT_ConfigController"
  showHeader="false" standardStylesheets="false" sidebar="false" applyHtmlTag="false" applyBodyTag="false" docType="html-5.0">
  <html ng-app="MT_Ranking">
  <head>
    <meta charset="utf-8"/>
    <base href="/apex/MT_Ranking/"></base>
    <meta name="viewport" content="initial-scale=1, maximum-scale=1, user-scalable=no, width=device-width"/>
    <title>PRO7 Media Transparency: Ranking</title>
    <link href="{!URLFOR($Resource.mediaTransparency, 'styles/pro7mt.slds.css')}" rel="stylesheet"/>
  </head>

  <body>
    <ui-view name="main"></ui-view>

    <script src="{!URLFOR($Resource.mediaTransparency, 'lib/angular/angular.js')}"></script>
    <script src="{!URLFOR($Resource.mediaTransparency, 'lib/angular-ui-router/release/angular-ui-router.js')}"></script>

    <script src="{!URLFOR($Resource.mediaTransparencyRanking, 'js/MT_Ranking.js')}"></script>
    <script>
      angular.module('config', [])
        .constant('forcengOptions', {accessToken: "{!$Api.Session_ID}", useProxy: false})
        .constant('baseURL', "{!URLFOR($Resource.mediaTransparency, '/')}")
        .constant('rankingBaseURL', "{!URLFOR($Resource.mediaTransparencyRanking, '/')}")
        .constant('userId', "{!$User.ID}")
        .constant('buildingBlockId',"{!MT_TvTarget__c.Id}");
    </script>

    <!-- modules -->
    <script src="{!URLFOR($Resource.mediaTransparency, 'modules/common/commonModule.js')}"></script>

    <script src="{!URLFOR($Resource.mediaTransparency, 'modules/common/directives/currencyInput.js')}"></script>
    <script src="{!URLFOR($Resource.mediaTransparency, 'modules/common/directives/percentageInput.js')}"></script>
    <script src="{!URLFOR($Resource.mediaTransparency, 'modules/common/directives/currencyOutput.js')}"></script>
    <script src="{!URLFOR($Resource.mediaTransparency, 'modules/common/directives/calendar.js')}"></script>
    <script src="{!URLFOR($Resource.mediaTransparency, 'modules/common/directives/modal.js')}"></script>
    <script src="{!URLFOR($Resource.mediaTransparency, 'modules/common/directives/dateRangePicker.js')}"></script>


    <script src="{!URLFOR($Resource.mediaTransparencyApi, 'module.js')}"></script>
    <script src="{!URLFOR($Resource.mediaTransparencyApi, 'services/remoteService.js')}"></script>
    <script src="{!URLFOR($Resource.mediaTransparencyApi, 'apis/config.js')}"></script>
    <script src="{!URLFOR($Resource.mediaTransparencyApi, 'models/ranking.js')}"></script>
    <script src="{!URLFOR($Resource.mediaTransparencyApi, 'apis/ranking.js')}"></script>

    <!-- ranking -->
    <script src="{!URLFOR($Resource.mediaTransparencyRanking, 'modules/ranking/rankingModule.js')}"></script>
    <script src="{!URLFOR($Resource.mediaTransparencyRanking, 'modules/ranking/controllers/rankingController.js')}"></script>
  </body>
  </html>

</apex:page>